<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true"
    tools:context=".MyPoints">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".NavigationLeft">

        <android.support.percent.PercentRelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/mypoints_total_points"
                app:layout_widthPercent="35%"
                app:layout_heightPercent="7%"
                app:layout_marginTopPercent="5%"
                app:layout_marginLeftPercent="6%"
                android:text="Total Points Earned"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/mypoints_points_with_me"
                app:layout_widthPercent="35%"
                app:layout_heightPercent="7%"
                app:layout_marginTopPercent="5%"
                app:layout_marginLeftPercent="6%"

                android:layout_below="@+id/mypoints_total_points"
                android:text="Points with me"
                android:textColor="#000"/>
            <TextView
            android:id="@+id/mypoints_points_redeemed"
            app:layout_widthPercent="35%"
            app:layout_heightPercent="7%"
            app:layout_marginTopPercent="5%"
            app:layout_marginLeftPercent="6%"

            android:layout_below="@+id/mypoints_points_with_me"
            android:text="Points Redeemed"
            android:textColor="#000"/>
        </android.support.percent.PercentRelativeLayout>
    </LinearLayout>

</FrameLayout>