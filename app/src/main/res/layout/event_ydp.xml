<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/r_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="DuplicateIds"
    android:scrollbars="none"
    android:fillViewport="true"
    android:background="#fff"
    android:clickable="true"
    android:windowSoftInputMode="adjustResize">

    <!--<android.support.constraint.ConstraintLayout-->
    <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->

    <!--<LinearLayout-->

    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:orientation="vertical">-->

    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
                android:id="@+id/img_event1"
                app:layout_widthPercent="100%"
                app:layout_heightPercent="30%"
                app:layout_marginTopPercent="5%"
                android:background="@drawable/img_ydp_1"/>
            <TextView
                android:id="@+id/upcoming_date"
                app:layout_widthPercent="20%"
                app:layout_heightPercent="10%"
                app:layout_marginTopPercent="5%"
                app:layout_marginLeftPercent="4%"
                android:layout_below="@+id/img_event1"
                android:textColor="#4fcfe9"
                android:text="2nd Feb Friday 2:00-3:00pm" />
            <View
                android:id="@+id/upcoming_view"
                app:layout_widthPercent="0.5%"
                app:layout_heightPercent="10%"
                app:layout_marginTopPercent="5%"
                android:layout_toRightOf="@+id/upcoming_date"
                android:layout_below="@+id/img_event1"
                android:background="#4facde" />
            <TextView
                android:id="@+id/up_event1"
                app:layout_widthPercent="30%"
                app:layout_heightPercent="10%"
                app:layout_marginTopPercent="5%"
                app:layout_marginLeftPercent="4%"
                android:layout_toRightOf="@+id/upcoming_view"
                android:layout_below="@+id/img_event1"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Event Name (Event Details)" />
            <Button
                android:id="@+id/upcoming_button1"
                app:layout_widthPercent="30%"
                app:layout_heightPercent="20%"
                android:layout_toRightOf="@+id/up_event1"
                android:layout_below="@+id/img_event1"
                app:layout_marginLeftPercent="5%"

                android:background="@drawable/register" />
            <ImageView
                android:id="@+id/img_event2"
                app:layout_widthPercent="100%"
                app:layout_heightPercent="30%"
                android:layout_below="@+id/upcoming_button1"
                android:background="@drawable/img_ydp_2"/>
            <TextView
                android:id="@+id/upcoming_date2"
                app:layout_widthPercent="20%"
                app:layout_heightPercent="10%"
                app:layout_marginTopPercent="5%"
                app:layout_marginLeftPercent="4%"
                android:layout_below="@+id/img_event2"
                android:textColor="#4fcfe9"
                android:text="2nd Feb Friday 2:00-3:00pm"
                />
            <View
                android:id="@+id/upcoming_view2"
                app:layout_widthPercent="0.5%"
                app:layout_heightPercent="10%"
                app:layout_marginTopPercent="5%"
                android:layout_toRightOf="@+id/upcoming_date2"
                android:layout_below="@+id/img_event2"
                android:background="#4facde" />
            <TextView
                android:id="@+id/up_event2"
                app:layout_widthPercent="30%"
                app:layout_heightPercent="10%"
                app:layout_marginTopPercent="5%"
                app:layout_marginLeftPercent="4%"
                android:layout_toRightOf="@+id/upcoming_view2"
                android:layout_below="@+id/img_event2"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Event Name (Event Details)"
                />
            <Button
                android:id="@+id/upcoming_button2"
                app:layout_widthPercent="30%"
                app:layout_heightPercent="20%"
                android:layout_toRightOf="@+id/up_event2"
                android:layout_below="@+id/img_event2"
                app:layout_marginLeftPercent="5%"
                android:background="@drawable/register" />

            <ImageView
                android:id="@+id/img_event3"
                app:layout_widthPercent="100%"
                app:layout_heightPercent="30%"
                android:background="@drawable/img_ydp_3"
                android:layout_below="@+id/upcoming_button2"/>
            <TextView
                android:id="@+id/upcoming_date3"
                app:layout_widthPercent="20%"
                app:layout_heightPercent="10%"
                app:layout_marginTopPercent="5%"
                app:layout_marginLeftPercent="4%"
                android:layout_below="@+id/img_event3"
                android:textColor="#4fcfe9"
                android:text="2nd Feb Friday 2:00-3:00pm" />
            <View
                android:id="@+id/upcoming_view3"
                app:layout_widthPercent="0.5%"
                app:layout_heightPercent="10%"
                app:layout_marginTopPercent="5%"
                android:layout_toRightOf="@+id/upcoming_date"
                android:layout_below="@+id/img_event3"
                android:background="#4facde" />
            <TextView
                android:id="@+id/up_event3"
                app:layout_widthPercent="30%"
                app:layout_heightPercent="10%"
                app:layout_marginTopPercent="5%"
                app:layout_marginLeftPercent="4%"
                android:layout_toRightOf="@+id/upcoming_view"
                android:layout_below="@+id/img_event3"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Event Name (Event Details)" />
            <Button
                android:id="@+id/upcoming_button3"
                app:layout_widthPercent="30%"
                app:layout_heightPercent="20%"
                android:layout_toRightOf="@+id/up_event1"
                android:layout_below="@+id/img_event3"
                app:layout_marginLeftPercent="5%"
                android:background="@drawable/register" />

        </android.support.percent.PercentRelativeLayout>
        <!--</ScrollView>-->
    <!--</android.support.constraint.ConstraintLayout>-->
</ScrollView>