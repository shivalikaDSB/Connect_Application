<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/r_scrollView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="DuplicateIds"
    android:scrollbars="none"
    android:fillViewport="true"
    android:clickable="true"
    android:background="@drawable/img_back_login"
    android:windowSoftInputMode="adjustResize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/basic_info"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Basic Information"
            android:textColor="#3574db"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/d_name">
        <EditText
            android:id="@+id/s_firstname"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/basic_info"
            android:gravity="left"
            android:hint="First Name"
            android:backgroundTint="#3574db"
            android:textColorHint="#000"
            android:inputType="textCapWords"
            android:layout_centerHorizontal="true"
            android:textCursorDrawable="@android:color/black" />
    </android.support.design.widget.TextInputLayout>

        <!--android:textCursorDrawable="@color/colorPrimary"-->

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/d_lname"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/s_lastname"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/s_firstname"
            android:gravity="left"
            android:hint="Last Name"
            android:textColorHint="#000"
            android:backgroundTint="#3574db"
            android:inputType="textCapWords"
            android:textCursorDrawable="@android:color/black"
            />
    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/d_email"
            android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/e2"
            android:layout_below="@+id/s_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#000"
            android:backgroundTint="#3574db"
            android:layout_centerHorizontal="true"
            android:textCursorDrawable="@android:color/black"
            />
        </android.support.design.widget.TextInputLayout>


        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal">-->


            <!--<TextView-->
                <!--android:id="@+id/textView"-->
