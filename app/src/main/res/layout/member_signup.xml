<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:clickable="true"
    tools:context=".Home">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo_signup"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="25%"
        app:layout_marginTopPercent="4%"
        app:layout_widthPercent="50%"
        android:src="@drawable/logo_design"
        android:textCursorDrawable="@android:color/black"
        android:backgroundTint="#000"/>

    <EditText
        android:id="@+id/s_name"
        android:autoText="true"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textColorHint="#000"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginRightPercent="4%"
        app:layout_marginTopPercent="4%"
        app:layout_widthPercent="70%"
        android:layout_below="@+id/logo_signup"
        android:layout_centerHorizontal="true"
        android:textCursorDrawable="@android:color/black"
        android:backgroundTint="#000"/>
    <EditText
        android:id="@+id/s_email"
        android:autoText="true"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#000"
        android:textColorHint="#000"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginRightPercent="4%"
        app:layout_marginTopPercent="1%"
        app:layout_widthPercent="70%"
        android:layout_below="@+id/s_name"
        android:layout_centerHorizontal="true"
        android:textCursorDrawable="@android:color/black"
        android:backgroundTint="#000"/>
    <EditText
        android:id="@+id/s_username"
        android:autoText="true"
        android:hint="User Name"
        android:inputType="textEmailAddress"
        android:textColor="#000"
        android:textColorHint="#000"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginRightPercent="4%"
        app:layout_marginTopPercent="1%"
        app:layout_widthPercent="70%"
        android:layout_below="@+id/s_email"
        android:layout_centerHorizontal="true"
        android:textCursorDrawable="@android:color/black"
        android:backgroundTint="#000"/>
    <EditText
        android:id="@+id/s_password"
        android:autoText="true"
        android:hint="Password"
        android:inputType="textWebPassword"
        android:textColor="#000"
        android:textColorHint="#000"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginRightPercent="4%"
        app:layout_marginTopPercent="1%"
        app:layout_widthPercent="70%"
        android:layout_below="@+id/s_username"
        android:layout_centerHorizontal="true"
        android:textCursorDrawable="@android:color/black"
        android:backgroundTint="#000"/>

    <Button
        android:id="@+id/s_signup"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="10%"
        android:layout_below="@+id/s_password"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_text"
        android:text="Sign Up"
        android:textColor="#fff"
        app:layout_marginTopPercent="5%"/>

</android.support.percent.PercentRelativeLayout>

</FrameLayout>